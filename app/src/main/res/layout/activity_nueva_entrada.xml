<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nuevaEntradaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ACE1AE"
        android:orientation="vertical"
        android:padding="30dp">

        <EditText
            android:id="@+id/IdCliente"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:ems="10"
            android:hint="ClienteID"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/marca"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:ems="10"
            android:hint="Marca"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/modelo"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:ems="10"
            android:hint="Modelo"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/matricula"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:ems="10"
            android:hint="Matricula"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/trabajadorAlCargo"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:ems="10"
            android:hint="Trabajador encargado del arreglo"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/averia"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:ems="10"
            android:hint="Descripcion de la averia"
            android:inputType="textPersonName" />

        <CheckBox
            android:id="@+id/urgente"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:text="URGENTE" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">

            <Button
                android:id="@+id/button13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="añadirEntrada"
                android:text="Añadir"
                android:translationX="-10dp" />

            <Button
                android:id="@+id/button14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="cancelarEntrada"
                android:text="cancelar"
                android:translationX="10dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>